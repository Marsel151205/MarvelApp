<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rectangle"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:layout_width="133dp"
        android:layout_height="204dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ant_man"
        android:layout_marginStart="30dp"
        android:id="@+id/iv_comics"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ant-Man and the \nWasp (2018) #3"
        android:textSize="18sp"
        android:id="@+id/tv_name_comics"
        app:layout_constraintTop_toBottomOf="@id/iv_comics"
        app:layout_constraintStart_toStartOf="@id/iv_comics"
        android:textColor="@color/gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>